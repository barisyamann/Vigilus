#ifndef NEO_M8N_H
#define NEO_M8N_H

#include "stm32f4xx_hal.h"
#include <string.h>
#include <stdlib.h>
#include <stdio.h>

#define GPS_UART_TIMEOUT  1100  // 1Hz i√ßin 1100ms timeout
#define GPS_BUF_SIZE      256

typedef struct {
    float    latitude;   // derece
    float    longitude;  // derece
    float    altitude;   // metre (MSL)
    float    speed;      // km/h
    uint8_t  fix;        // 0=fix yok, 1=fix var
    uint8_t  satellites;
    char     time[10];   // HHMMSS.ss
} GPS_Data;

HAL_StatusTypeDef GPS_Init(UART_HandleTypeDef *huart);
HAL_StatusTypeDef GPS_Read(UART_HandleTypeDef *huart, GPS_Data *data);

#endif
