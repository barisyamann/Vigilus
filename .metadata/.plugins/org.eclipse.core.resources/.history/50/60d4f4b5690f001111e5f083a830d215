#ifndef MPU9250_H
#define MPU9250_H

#include "stm32f4xx_hal.h"

#define MPU9250_ADDR         (0x68 << 1)
#define MPU9250_WHO_AM_I_REG  0x75
#define MPU9250_WHO_AM_I_VAL  0x71
#define MPU9250_PWR_MGMT_1    0x6B
#define MPU9250_ACCEL_XOUT_H  0x3B
#define MPU9250_GYRO_XOUT_H   0x43


typedef struct{
	float accel_x,accel_y,accel_z;
	float 	gyro_x,gyro_y,gyro_z;
	float temp;
}MPU9250_Data;

HAL_StatusTypeDef MPU9250_Init(I2C_HandleTypeDef *hi2c);
HAL_StatusTypeDef MPU9250_ReadAll(I2C_HandleTypeDef *hi2c,MPU9250_Data *data);
#endif
